---
---
[
  {% for post in site.posts %}
    {
      "title"    : "Post: {{ post.title | escape }}",
      "description": "{{ post.description | escape }}",
      "url"      : "{{ site.url }}{{ post.url }}",
      "date"     : "{{ post.date | date_to_string}}",
      "categories": "{{ post.categories | join:', ' }}"
    },
  {% endfor %}
  {% assign projects = site.pages | where:'layout','project' %}
  {% for project in projects %}
  {
    "title"     : "Project: {{ project.title | escape }}",
    "description"     : "{{ project.description | escape }}",
    "url"       : "{{ site.url }}{{ project.url }}",
    "categories": "{{ project.tech_stack | join:', ' }}"
  }{% unless forloop.last %},{% endunless %}{% endfor %}
]

