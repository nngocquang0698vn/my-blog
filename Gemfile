source 'https://rubygems.org'

group :build do
  gem 'jekyll'
  gem 'jekyll-git_metadata'
  gem 'jekyll-last-modified-at'
  gem 'jekyll-seo-tag'
  gem 'jekyll-sitemap'
  gem 'jekyll-toc'
  gem 'jekyll_tagger'
  gem 'json'
  gem 'rouge'
end

group :test do
  gem 'git'
  gem 'html-proofer'
  gem 'kwalify'
  gem 'rake'
end

group :deploy do
  gem 'capistrano', '= 3.7.1'
  gem 'rake'
end
